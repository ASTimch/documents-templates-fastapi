        <title>
            {% block title %}
                Наименование страницы
            {% endblock title %}
        </title>
        <!-- Bootstrap CSS -->
        <link rel="stylesheet"
              href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <style>
        /* Custom CSS for grayscale hint */
        .grayscale-hint {
            color: #999; /* Grayscale color for hint */
        }
        input {
            width: calc(50%); /* Adjust the width of the input fields */
            margin: 5px; /* Add margin for spacing */
            padding: 5px; /* Add padding for spacing */
        }
        </style>
    </head>
    <body>
        {% include "includes/header.jinja" %}
        <main>
            <div class="container py-5">
                {% block content %}
                    Содержимое страницы
                {% endblock content %}
            </div>
        </main>
        <footer class="border-top text-center py-3">
            {% include "includes/footer.jinja" %}
        </footer>
        {% block scripts %}
        {% endblock scripts %}
    </body>
